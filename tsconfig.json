{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/assets/*": ["./src/assets/*"],
      "~/components/*": ["./src/components/*"],
      "~/hooks/*": ["./src/hooks/*"],
      "~/lib/*": ["./src/lib/*"],
      "~/utils/*": ["./src/utils/*"],
      "~/routes/*": ["./src/routes/*"],
      "~/integrations/*": ["./src/integrations/*"],
    },
    "noEmit": true
  }
}
