{
  "include": ["**/*.ts", "**/*.tsx"],
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~/assets/*": ["./assets/*"],
      "~/components/*": ["./components/*"],
      "~/hooks/*": ["./hooks/*"],
      "~/lib/*": ["./lib/*"],
      "~/pages/*": ["./pages/*"],
      "~/types/*": ["./types/*"],
      "~/utils/*": ["./utils/*"],
      "~/routes/*": ["./routes/*"],
      "~/integrations/*": ["./integrations/*"],
    },
    "noEmit": true
  }
}
